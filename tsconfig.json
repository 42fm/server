{
  "compilerOptions": {
    "emitDecoratorMetadata": true,
    "experimentalDecorators": true,
    "module": "NodeNext",
    "esModuleInterop": true,
    "target": "ESNext",
    "skipLibCheck": true,
    "noImplicitAny": true,
    "moduleResolution": "NodeNext",
    "sourceMap": true,
    "outDir": "dist",
    "rootDir": "src",
    "baseUrl": "src",
    "strict": true,
    "paths": {
      "@commands/*": ["./commands/*"],
      "@constants/*": ["./constants/*"],
      "@db/*": ["./db/*"],
      "@lib/*": ["./lib/*"],
      "@middleware/*": ["./middleware/*"],
      "@routes/*": ["./routes/*"],
      "@utils/*": ["./utils/*"]
    },
    "typeRoots": ["./types", "node_modules/@types"]
  },
  "include": ["src/", "types/"],
  "ts-node": {
    "esm": true,
    "transpileOnly": true
  }
}
